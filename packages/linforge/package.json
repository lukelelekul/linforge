{
  "name": "linforge",
  "version": "0.3.0",
  "private": false,
  "type": "module",
  "description": "Embeddable workbench for LangGraph Agent apps â€” edit, run, debug, and monitor in one place",
  "license": "MIT",
  "author": "LianBuilds",
  "repository": {
    "type": "git",
    "url": "https://github.com/lukelelekul/linforge.git"
  },
  "keywords": [
    "langgraph",
    "agent",
    "workbench",
    "react",
    "langchain",
    "llm",
    "ai"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.cjs"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js",
      "require": "./dist/testing/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "cp ../../LICENSE ../../CHANGELOG.md . && pnpm run build && pnpm run test"
  },
  "dependencies": {
    "@langchain/core": "^1.1.27",
    "@langchain/langgraph": "^1.1.5",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "@koa/router": "^15.0.0",
    "@xyflow/react": "^12.0.0",
    "koa": "^3.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "koa": {
      "optional": true
    },
    "@koa/router": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "@xyflow/react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@koa/router": "^15.3.0",
    "@types/koa": "^3.0.1",
    "@types/koa__router": "^12.0.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@xyflow/react": "^12.10.1",
    "tsup": "^8.5.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
  }
}
